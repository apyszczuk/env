[bandwidth_down]
command=./bandwidth/bandwidth.sh
interval=1
IFNAME=eno1
DIRECTION=rx
UNITS=metric
ICON=
min_width=XXX999.99KB/s|9.99GB


[bandwidth_up]
command=./bandwidth/bandwidth.sh
interval=1
IFNAME=eno1
DIRECTION=tx
UNITS=metric
ICON=
min_width=XXX999.99KB/s|9.99GB


[local_ip]
command=./local_ip/local_ip.sh
IFNAME=eno1
interval=once


[ram]
command=./ram/ram.sh
HIGH_LEVEL=90
interval=1
min_width=XXX8192MB(99%)


[sda2]
command=./disk/disk.sh
HIGH_LEVEL=90
DISK_NAME=/dev/sda2
interval=10


[sda3]
command=./disk/disk.sh
HIGH_LEVEL=90
DISK_NAME=/dev/sda3
interval=10


[temperature]
command=./temperature/temperature.sh
PATH_TO_TEMPERATURE_FILES=/sys/devices/platform/coretemp.0/hwmon/hwmon1
HIGH_LEVEL=90
interval=1


[uptime]
command=./uptime/uptime.sh
interval=60


[load_average]
command=./loadavg/loadavg.sh
interval=10


[system_update]
command=./system_update/system_update.sh
BUTTON=1
interval=persist


[pacman]
command=./pacman/pacman.sh
interval=3600


[volume]
command=./volume/volume.sh
INCREASE_BUTTON=4
DECREASE_BUTTON=5
MUTE_BUTTON=2
STEP_VALUE=3
interval=persist
min_width=OFF 100%
align=center


[calendar]
command=./calendar/calendar.sh
BUTTON=1
interval=persist


[date_and_time]
command=./date/date.sh
FORMAT=%a %F %H:%M
interval=10
