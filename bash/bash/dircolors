v+="*.lzo=$color_archive:"
v+="*.pyz=$color_archive:"
v+="*.rar=$color_archive:"
v+="*.rpm=$color_archive:"
v+="*.rz=$color_archive:"
v+="*.sar=$color_archive:"
v+="*.swm=$color_archive:"
v+="*.t7z=$color_archive:"
v+="*.tar=$color_archive:"
v+="*.taz=$color_archive:"
