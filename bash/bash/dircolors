# colors
color_archive="01;31"
color_image="01;35"
color_audio="00;36"
color_backup="00;90"


# temporary LS_COLORS
v=""

# groups
v+="rs=0:"                      # reset to normal color
v+="di=01;34:"                  # directory
v+="ln=01;36:"                  # symbolic link
v+="mh=00:"                     # regular file with more than one link
v+="pi=40;33:"                  # named pipe
v+="so=01;35:"                  # socket
v+="do=01;35:"                  # door
v+="bd=40;33;01:"               # block device
v+="cd=40;33;01:"               # character device
v+="or=40;31;01:"               # symbolic link to non-existent file
v+="mi=00:"                     # 
v+="su=37;41:"                  # file that is setuid (u+s)
v+="sg=30;43:"                  # file that is setgid (g+s)
v+="ca=00:"                     # file with capability
v+="tw=30;42:"                  # directory that is sticky and other-writable (+t,o+w)
v+="ow=34;42:"                  # directory that is not sticky other-writable (o+w)
v+="st=37;44:"                  # directory that is sticky and not other-writable (+t)
v+="ex=01;32:"                  # regular file with execute permission


# extensions

# archive
v+="*.7z=$color_archive:"
v+="*.ace=$color_archive:"
v+="*.alz=$color_archive:"
v+="*.apk=$color_archive:"
v+="*.arc=$color_archive:"
v+="*.arj=$color_archive:"
v+="*.bz=$color_archive:"
v+="*.bz2=$color_archive:"
v+="*.cab=$color_archive:"
v+="*.cpio=$color_archive:"
