v+="*.tgz=$color_archive:"
v+="*.tlz=$color_archive:"
v+="*.txz=$color_archive:"
v+="*.tz=$color_archive:"
v+="*.tzo=$color_archive:"
v+="*.tzst=$color_archive:"
v+="*.udeb=$color_archive:"
v+="*.war=$color_archive:"
v+="*.whl=$color_archive:"
v+="*.wim=$color_archive:"
v+="*.xz=$color_archive:"
v+="*.z=$color_archive:"
v+="*.zip=$color_archive:"
v+="*.zoo=$color_archive:"
v+="*.zst=$color_archive:"

# image
v+="*.avif=$color_image:"
v+="*.jpg=$color_image:"
v+="*.jpeg=$color_image:"
v+="*.mjpg=$color_image:"
v+="*.mjpeg=$color_image:"
v+="*.gif=$color_image:"
v+="*.bmp=$color_image:"
v+="*.pbm=$color_image:"
v+="*.pgm=$color_image:"
