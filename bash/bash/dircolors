v+="*.egg=$color_archive:"
v+="*.esd=$color_archive:"
v+="*.gz=$color_archive:"
v+="*.jar=$color_archive:"
v+="*.lha=$color_archive:"
v+="*.lrz=$color_archive:"
v+="*.lz=$color_archive:"
v+="*.lz4=$color_archive:"
v+="*.lzh=$color_archive:"
