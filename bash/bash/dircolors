v+="*.dpkg-dist=$color_backup:"
v+="*.dpkg-new=$color_backup:"
v+="*.dpkg-old=$color_backup:"
v+="*.dpkg-tmp=$color_backup:"
v+="*.old=$color_backup:"
v+="*.orig=$color_backup:"
v+="*.part=$color_backup:"
