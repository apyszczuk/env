v+="*.tiff=$color_image:"
v+="*.png=$color_image:"
v+="*.svg=$color_image:"
v+="*.svgz=$color_image:"
v+="*.mng=$color_image:"
v+="*.pcx=$color_image:"
v+="*.mov=$color_image:"
v+="*.mpg=$color_image:"
v+="*.mpeg=$color_image:"
v+="*.m2v=$color_image:"
v+="*.mkv=$color_image:"
v+="*.webm=$color_image:"
v+="*.webp=$color_image:"
v+="*.ogm=$color_image:"
v+="*.mp4=$color_image:"
v+="*.m4v=$color_image:"
v+="*.mp4v=$color_image:"
v+="*.vob=$color_image:"
v+="*.qt=$color_image:"
v+="*.nuv=$color_image:"
v+="*.wmv=$color_image:"
